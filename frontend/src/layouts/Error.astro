---
interface Props {
  title: string;
}

const { title } = Astro.props;
import "../../styles/styles.css";
---

<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="w-screen h-screen bg-gray-100 overflow-x-hidden">
    <div class="w-full h-full flex justify-center items-center p-8">
      <main class="w-[32rem] max-w-full p-4 text-center">
        <slot />
      </main>
    </div>
  </body>
</html>
